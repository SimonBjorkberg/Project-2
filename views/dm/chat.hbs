  <div class="container mt-16 mx-auto px-4 py-4 w-[320px] bg-[#d1dbdb] border-2 border-teal-800 shadow-md rounded-lg">

    <h2 class="text-2xl font-bold mb-4 text-black">Conversation with: <br>
    <span class="text-teal-900">
      <a href="/profile/{{recipientUser.username}}" class="hover:underline">{{recipientUser.username}}</a>
    </span></h2>

    <div class="conversation">
      {{#each conversation}}
        <div class="message bg-white p-2 rounded shadow my-1">
          <div class="flex items-center">
            <img src="{{ sender.profilePicture }}" alt="{{ sender.username }}'s Profile Picture" class="w-6 h-6 rounded-full mr-2">
            <p class="font-semibold">{{ sender.username }}:</p>
          </div>
          <p>{{ content }}</p>
          <p class="text-sm text-gray-500">{{ createdAt }}</p>
        </div>
      {{/each}}
    </div>

    <form action="/send-message" method="POST" class="mt-8">
      <input type="hidden" name="recipient" value="{{ recipientUser.username }}">
      <textarea name="content" class="w-full p-2 rounded shadow border-teal-800 border" placeholder="Type your message"></textarea>
      <button type="submit" class="mt-4 px-4 py-2 bg-teal-600 text-white font-semibold rounded hover:bg-teal-500">Send</button>
    </form>
  </div>