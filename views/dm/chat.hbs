  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">Chat</h1>

    <h2 class="text-2xl font-bold mb-4">Conversation with {{ recipientUser.username }}</h2>

    <div class="conversation space-y-4">
      {{#each conversation}}
        <div class="message bg-white p-4 rounded shadow">
          <p class="font-semibold">{{ sender.username }}</p>
          <p>{{ content }}</p>
          <p class="text-sm text-gray-500">{{ createdAt }}</p>
        </div>
      {{/each}}
    </div>

    <form action="/send-message" method="POST" class="mt-8">
      <input type="hidden" name="recipient" value="{{ recipientUser.username }}">
      <textarea name="content" class="w-full p-4 rounded shadow" placeholder="Type your message"></textarea>
      <button type="submit" class="mt-4 px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600">Send</button>
    </form>
  </div>