<div class="container mt-6 mx-auto w-[335px] sm:w-full">
  <div class="grid sm:grid-flow-col sm:w-[512px] sm:grid-cols-3 grid-cols-2 mx-auto">
    {{#each users}}
      <div class="bg-white rounded-lg shadow-md p-4 w-[150px] m-2 mx-auto">
        <img src="{{this.profilePicture}}" alt="Profile Picture" class="w-18 h-18 rounded-full mx-auto mb-2">
        <span class="block text-center font-bold">{{this.username}}</span>
        <a href="/chat/{{this.username}}" class="block text-center mt-2 bg-teal-600 hover:bg-teal-500 text-white font-bold py-2 px-4 rounded">Chat</a>
      </div>
    {{/each}}
  </div>
</div>