<section class="mx-5 md:mx-0">
  <div class="rounded-md md:mb-4 w-full ml-2 md:w-2/3 md:m-auto md:mt-5 mt-5">
    <a href="/topic/{{thread.topicParent.title}}" class="text-teal-900 hover:underline font-bold">Go Back</a>
  </div>
<div class="bg-teal-900 p-4 rounded-md mb-4 m-auto md:w-2/3">
  <div class="flex justify-between">
    <div class="flex items-center mb-2">
      <img src="{{thread.author.profilePicture}}" alt="PP" class="w-8 h-8 rounded-full mr-2" />
      <p class="text-white">Posted by:
        <span>
          <a href="/profile/{{thread.author.username}}" class="text-teal-500 hover:underline font-bold">
            {{thread.author.username}}
          </a>
        </span>
      </p>
    </div>
    <p class="text-white">Posted: {{thread.createdAt}}</p>
  </div>
  <div class="flex justify-between">
    <div>
      <h2 class="text-lg font-bold text-white">{{thread.title}}</h2>
    </div>
    <div class="flex items-center space-x-2">
      {{#if thread.auth}}
        <button id="editThreadButtonOpen" class="text-teal-500 hover:underline font-bold">Edit</button>
        <form action="/threads/{{thread._id}}/delete" method="post">
          <button type="submit" class="text-teal-500 hover:underline font-bold">Delete</button>
        </form>
      {{/if}}
      <form action="/threads/{{thread._id}}/like" method="post">
        <button type="submit" class="text-teal-500 px-2 py-0.5 border-2 border-teal-500  font-bold">
          {{thread.likes.length}}
        </button>
      </form>
    </div>
  </div>
  <div class="ml-0 text-white">
    {{thread.content}}
  </div>
</div>

  {{#each thread.posts}}
<div class="bg-[#d1dbdb] border border-teal-500 rounded-lg p-4 flex flex-col md:w-2/3 my-5 mx-auto">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <img class="h-8 w-8 rounded-full" src="{{this.author.profilePicture}}" alt="PP" />
      <p class="ml-2">Posted by:
        <span>
          <a href="/profile/{{this.author.username}}" class="text-teal-700 hover:underline font-bold">
            {{this.author.username}}
          </a>
        </span>
      </p>
    </div>
    <p>Posted: {{this.createdAt}}</p>
  </div>
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-lg font-bold">{{this.title}}</h2>
    </div>
    <div class="flex items-center space-x-2">
      {{#if this.auth}}
        <button id="editPostButtonOpen-{{this._id}}" class="text-teal-700 hover:underline font-bold">Edit</button>
        <form action="/post/{{this._id}}/delete" method="post">
          <button type="submit" class="text-teal-700 hover:underline font-bold">Delete</button>
        </form>
      {{/if}}
      <form action="/post/{{this._id}}/like" method="post">
        <button type="submit" class="text-teal-700 px-2 py-0.5 border-2 border-teal-700 font-bold">
          {{this.likes.length}}
        </button>
      </form>
    </div>
  </div>
  <div class="ml-0">
    {{this.content}}
  </div>
</div>
  {{/each}}
</section>

<div class="bg-teal-900 p-4 rounded-md mb-5 w-96 lg:w-3/6 2xl:w-1/3 mx-auto my-10">
  <form action="/post/{{thread._id}}" method="post">
    <div class="grid grid-cols-1 gap-4">
      <div>
        <textarea
          id="content"
          name="content"
          placeholder="Create a Post!"
          required
          class="w-full p-2 rounded-md border border-gray-300 focus:outline-none focus:border-teal-500 resize-y"
        ></textarea>
      </div>
    </div>
    <div class="mt-4">
      <button
        type="submit"
        class="bg-teal-700 text-white py-2 px-4 rounded-md hover:bg-teal-600 hover:border-teal-600 transition-colors"
      >
        Post
      </button>
    </div>
  </form>
</div>

<dialog id="editThreadModal" class="bg-white rounded-lg p-4 w-full sm:w-3/4">
  <div>
    <div class="flex justify-between mb-4">
      <p class="font-bold">Edit Thread</p>
      <button
        id="editThreadButtonClose"
        class="text-gray-600 text-xl font-bold"
      >x</button>
    </div>
    <form action="/threads/{{thread._id}}/update" method="post">
      <div class="mb-4">
        <input
          type="text"
          name="title"
          value="{{thread.title}}"
          class="w-full border border-gray-400 rounded py-1 px-2"
        />
      </div>
      <div class="mb-4">
        <textarea
          name="content"
          class="w-full border border-gray-400 rounded py-1 px-2 h-32"
        >{{thread.content}}</textarea>
      </div>
      <div class="flex justify-end">
        <button
          type="submit"
          class="bg-teal-700 text-white rounded px-4 py-2"
        >Edit</button>
      </div>
    </form>
  </div>
</dialog>

<script>
  const editThreadButtonOpen = document.getElementById('editThreadButtonOpen')
  const editThreadButtonClose = document.getElementById('editThreadButtonClose')
  editThreadButtonOpen.addEventListener('click', () => {
  editThreadModal.showModal(); })
  editThreadButtonClose.addEventListener('click', () => {
  editThreadModal.close(); })
</script>

<script>
  {{#each thread.posts}}
    const editPostButtonOpen_{{this._id}}
    = document.getElementById('editPostButtonOpen-{{this._id}}'); const
    editPostButtonClose_{{this._id}}
    = document.getElementById('editPostButtonClose-{{this._id}}');
    editPostButtonOpen_{{this._id}}.addEventListener('click', () => { const
    editPostModal_{{this._id}}
    = document.getElementById('editPostModal-{{this._id}}'); editPostModal_{{this._id}}.showModal();
    }); editPostButtonClose_{{this._id}}.addEventListener('click', () => { const
    editPostModal_{{this._id}}
    = document.getElementById('editPostModal-{{this._id}}'); editPostModal_{{this._id}}.close();
    });
  {{/each}}
</script>