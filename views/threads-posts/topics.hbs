<div class="py-4 mt-5 w-96 m-auto border-2 rounded-md bg-teal-800">
  <p class="text-white text-center text-2xl font-bold">{{topic.title}}</p>
</div>

<div class="rounded-md w-4/5 sm:w-2/3 mb-5 mx-auto mt-5 md:mt-0">
  <a href="/" class="text-teal-900 hover:underline">Go Back</a>
</div>

{{#each thread}}
  <section
    class="bg-teal-700 shadow-md p-4 rounded-md mb-4 w-4/5 sm:w-2/3 m-auto hover:bg-teal-600 hover:border-teal-500 transition-colors border-teal-500 border"
  >
    <div onclick="threadClick('{{this._id}}')" class="cursor-pointer">
      <div>
        <h2 class="text-2xl text-white font-bold mb-1">{{this.title}}</h2>
        <p class="text-white">{{thread.likes.length}}</p>
      </div>
      <p class="text-white truncate">{{this.content}}</p>
      <div class="flex sm:flex-row mt-2 justify-between flex-col">
        <div class="flex items-center">
          <img
            src="{{this.author.profilePicture}}"
            alt="PP"
            class="w-8 h-8 rounded-full mr-2"
          />
          <p class="text-white">Posted by
            <span class="font-semibold">
              <a
                href="/profile/{{this.author.username}}"
                class="text-white hover:underline"
              >
                {{this.author.username}}
              </a>
            </span>
          </p>
        </div>
        <div class="flex items-center">
          <p class="text-white">Posted: {{this.createdAt}}</p>
        </div>
      </div>
    </div>
  </section>

{{/each}}

{{#if userInSession}}
  <div class="bg-teal-900 p-4 rounded-md mb-4 sm:w-1/2 w-4/5 mx-auto my-32">
    <form action="/threads/create/{{topic._id}}" method="post">
      <div class="grid grid-cols-1 gap-4">
        <div>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Title"
            required
            class="w-full p-2 rounded-md border border-gray-300 focus:outline-none focus:border-teal-500"
          />
        </div>
        <div>
          <textarea
            id="content"
            name="content"
            placeholder="Content"
            required
            class="w-full p-2 rounded-md border border-gray-300 focus:outline-none focus:border-teal-500 resize-y"
          ></textarea>
        </div>
      </div>
      <div class="mt-4">
        <button
          type="submit"
          class="bg-teal-700 text-white py-2 px-4 rounded-md hover:bg-teal-600 hover:border-teal-600 transition-colors"
        >
          Create Thread
        </button>
      </div>
    </form>
  </div>
{{/if}}